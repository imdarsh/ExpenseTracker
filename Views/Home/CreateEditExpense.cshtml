@{
    ViewData["Title"] = "Create / Edit";
}
@model ExpenseTracker.Models.Expense

<div>
    <h2 class="text-center">Add New Expense</h2>
    <form asp-action="CreateEditExpenseForm" asp-asp-controller="Home">
        @* Include a hidden input for the Id field *@
        <input type="hidden" asp-for="Id" />
        <div class="form-group p-2">
            <label for="Value">Expense Amount:</label>
            <input asp-for="Value" type="text" class="form-control" id="ExpenseValue" placeholder="Enter Value" />
        </div>
        <div class="form-group p-2">
            <label for="Value">Expense Desription:</label>
            <input asp-for="Description" type="text" class="form-control" id="ExpenseName" placeholder="Enter Description" />
        </div>
        <div class="form-group p-2">
            <button type="submit" class="btn btn-primary">@ViewData["Title"] Expense</button>
        </div>
    </form>
</div>